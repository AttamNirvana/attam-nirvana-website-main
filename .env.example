# Next.js Configuration
# Copy this file to .env.local for local development

# Email Service Configuration (for contact form)
# Example: using SendGrid, Mailgun, or similar
# EMAIL_SERVICE_API_KEY=your_api_key_here
# EMAIL_FROM=noreply@attamnirvana.com
# EMAIL_TO=contact@attamnirvana.com

# Calendar/Booking Integration (for free sessions)
# Example: Calendly, Cal.com, or similar
# CALENDAR_API_KEY=your_calendar_api_key
# CALENDAR_URL=https://calendly.com/your-username

# Analytics (optional)
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
# NEXT_PUBLIC_PLAUSIBLE_DOMAIN=attamnirvana.com

# Environment
NODE_ENV=production

# Domain (for canonical URLs, sitemap generation)
NEXT_PUBLIC_SITE_URL=https://www.attamnirvana.com
